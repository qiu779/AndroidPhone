<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="没有"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/detail_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="新建"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/detail_picture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/people"/>

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="名字"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

<!--    分界线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:background="#22000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/detail_number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="18396329095"
            android:paddingVertical="20dp"/>

        <ImageButton
            android:id="@+id/detail_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/people"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/detailimagebut_rdius"/>

        <ImageButton
            android:id="@+id/detail_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/people"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/button_radius"/>
    </LinearLayout>

    <!--    分界线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:background="#22000000"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="通话记录"
        android:textSize="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detailcalls_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="20dp"/>

    <!--    分界线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:background="#22000000"/>

</LinearLayout>