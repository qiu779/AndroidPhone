<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_cancel"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="×"
            android:padding="0dp"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@null"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建联系人"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/add_commit"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="√"
            android:padding="0dp"
            android:textColor="@color/gray"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/people" />

        <Button
            android:id="@+id/add_qrcode"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="扫描名片"
            android:textSize="10dp"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:padding="0dp"/>

        <EditText
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="姓名"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp" />

        <EditText
            android:id="@+id/add_number1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="电话"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>

        <EditText
            android:id="@+id/add_number2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="电话"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>

        <EditText
            android:id="@+id/add_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="邮件"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>
        <DatePicker
            android:id="@+id/add_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="生日"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>
        <EditText
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="地址"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>

        <LinearLayout
            android:id="@+id/add_groupchoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="群组名称"
                android:textSize="15dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=">"
                android:textSize="15dp"
                android:paddingLeft="50dp"
                android:paddingVertical="10dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/add_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="备注"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/editview_radius"
            android:paddingHorizontal="20dp"/>

    </LinearLayout>

</LinearLayout>