<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.myphone.myView.EditTextWithDel
        android:id="@+id/contact_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="25dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/searchview_radius"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contact_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.myphone.myView.SideBar
            android:id="@+id/contact_sideBar"
            android:layout_width="60px"
            android:layout_height="550dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="10dp"
            android:background="@drawable/sidebar_radius"/>

        <TextView
            android:id="@+id/show_index_letter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="A"
            android:background="@drawable/index_show_radius"
            android:visibility="gone"/>

        <Button
            android:id="@+id/contact_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/contact_sideBar"
            android:background="@drawable/button_radius"
            android:gravity="center"
            android:padding="0dp"
            android:text="ï¼‹"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RelativeLayout>

</LinearLayout>